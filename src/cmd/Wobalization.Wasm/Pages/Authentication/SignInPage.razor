@page "/authentication/sign-in"
@using Wobalization.Wasm.Layouts
@using Blazored.FluentValidation
@layout MainLayout

<EditForm Model="@_dto" OnValidSubmit="OnSubmittedAsync">
    <FluentValidationValidator/>
    <MudPaper>
        <MudStack Class="pa-8" Spacing="2">
            <MudText Typo="Typo.h6" Align="Align.Center">Wobalization</MudText>
            <MudTextField Variant="Variant.Outlined" @bind-Value="_dto.Username" For="@(() => _dto.Username)" Label="Username"/>
            <MudTextField Variant="Variant.Outlined" @bind-Value="_dto.Password" For="@(() => _dto.Password)" Label="Password" InputType="InputType.Password"/>
            <MudButton Class="mt-2" ButtonType="@ButtonType.Submit" DisableElevation FullWidth Size="@Size.Large" Variant="Variant.Filled" Color="Color.Primary">Sign In</MudButton>
        </MudStack>
    </MudPaper>
</EditForm>